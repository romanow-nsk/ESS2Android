<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/form_frame_scroll"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="600dp">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/form_frame_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/form_back"
        >
    </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:background="@color/colorESS2Back"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/form_frame_scroll"
        android:orientation="horizontal"
        android:id="@+id/form_frame_menu"
        android:layout_width="match_parent"
        android:layout_height="75dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
