<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/White">

    <ScrollView
        android:id="@+id/form_frame_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:contentDescription="...">

        <RelativeLayout
            android:id="@+id/form_frame_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/form_back"></RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/form_frame_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/form_frame_scroll"
        android:layout_alignParentBottom="true"
        android:background="@color/colorESS2Back"
        android:orientation="horizontal" />
</RelativeLayout>
